<div class="container login-panel">
  <%= image_tag "b.svg", class: "login-logo"%>
  <div class="orange-outline login-form">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <!-- <%= f.label :username %><br /> -->
        <%= f.text_field :username, autofocus: true, placeholder: "Username" %>
      </div>

      <div class="field">
        <!-- <%= f.label :password %><br /> -->
        <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <!-- <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div> -->
      <% end -%>

      <div class="actions">
        <%= f.submit "SIGN IN",  class:"login-button" %>
      </div>
    <% end %>
  </div>
  <div class="orange-outline login-lower-section">
    <%= button_to('Sign Up', new_registration_path(resource_name), :class => 'btn btn-large btn-primary')%>
    <%= link_to "Sign up", new_registration_path(resource_name) %><br />
  </div>
</div>

<%= render "/users/shared/links" %>
